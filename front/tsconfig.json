{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@atoms/*": ["src/components/atoms/*"],
      "@molecules/*": ["src/components/molecules/*"],
      "@organisms/*": ["src/components/organisms/*"],
      "@templates": ["src/templates"],
      "@templates/*": ["src/templates/*"],
      "@constants/*": ["src/constants/*"],
      "@config/*": ["src/config/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@util": ["src/util"],
      "@util/*": ["src/util/*"],
      "@pages/*": ["src/pages/*"],
      "@store/*": ["src/store/*"],
      "@reducers/*": ["src/reducers/*"],
      "@sagas/*": ["src/sagas/*"]
    }
  }
}
